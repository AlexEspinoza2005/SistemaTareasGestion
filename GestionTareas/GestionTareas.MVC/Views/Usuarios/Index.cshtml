@model IEnumerable<GestionTareas.API.Models.Usuario>

<h1>Usuarios</h1>

<p>
    <a href="@Url.Action("Create")">Crear Nuevo Usuario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>@usuario.Email</td>
                <td>
                    <a href="@Url.Action("Details", new { id = usuario.Id })">Detalles</a> |
                    <a href="@Url.Action("Edit", new { id = usuario.Id })">Editar</a> |
                    <a href="@Url.Action("Delete", new { id = usuario.Id })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>