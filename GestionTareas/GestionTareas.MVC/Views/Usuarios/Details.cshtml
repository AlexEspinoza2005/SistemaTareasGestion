@model GestionTareas.API.Models.Usuario

<h1>Detalles del Usuario</h1>

<div>
    <dl>
        <dt>ID:</dt>
        <dd>@Model.Id</dd>

        <dt>Nombre:</dt>
        <dd>@Model.Nombre</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Edit", new { id = Model.Id })">Editar</a> |
    <a href="@Url.Action("Index")">Volver a la Lista</a>
</div>
