@model GestionTareas.API.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}

<h1 class="text-center" style="color: #2c3e50; font-size: 2.5rem; font-weight: bold; margin-bottom: 30px;">@ViewData["Title"]</h1>

<div class="container" style="max-width: 800px; margin: 0 auto;">
    <div style="background-color: #ffffff; padding: 30px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <h4 style="font-size: 1.8rem; color: #34495e;">Información Personal</h4>
        <hr style="border-color: #ddd;" />

        <dl class="row" style="font-size: 1.1rem;">
            <dt class="col-sm-3" style="font-weight: bold; color: #34495e;">Nombre:</dt>
            <dd class="col-sm-9" style="color: #7f8c8d;">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3" style="font-weight: bold; color: #34495e;">Email:</dt>
            <dd class="col-sm-9" style="color: #7f8c8d;">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
    </div>

    <div class="text-center" style="margin-top: 30px;">
        <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/Default_pfp.jpg?20200418092106"
             alt="Foto de Perfil"
             style="max-width: 150px; border-radius: 50%; border: 3px solid #3498db; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);" />
    </div>

    <div class="text-center" style="margin-top: 30px;">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" style="background-color: #3498db; border: none; font-size: 1.1rem; padding: 12px 20px; border-radius: 8px;">Editar Perfil</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="background-color: #95a5a6; border: none; font-size: 1.1rem; padding: 12px 20px; border-radius: 8px; margin-left: 10px;">Volver al Inicio</a>
    </div>
</div>
