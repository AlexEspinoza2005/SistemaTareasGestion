@model GestionTareas.API.Models.Proyecto

<h1>Eliminar Proyecto</h1>

<div class="alert alert-warning">
    <h3>¿Estás seguro de que deseas eliminar este proyecto?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID:</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Nombre:</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Descripción:</dt>
            <dd class="col-sm-10">@Model.Descripcion</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>