@model GestionTareas.API.Models.Proyecto

<h1>Detalles del Proyecto</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID:</dt>
            <dd class="col-sm-10">@Model.Id</dd>
            <dt class="col-sm-2">Nombre:</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>
            <dt class="col-sm-2">Descripción:</dt>
            <dd class="col-sm-10">@Model.Descripcion</dd>

            <dt class="col-sm-2">Total Tareas:</dt>
            <dd class="col-sm-10">@(Model.Tareas?.Count() ?? 0)</dd>

           
        </dl>
    </div>
</div>

@if (Model.Tareas != null && Model.Tareas.Any())
{
    <div class="card mt-3">
        <div class="card-header">
            <h5>Tareas del Proyecto</h5>
        </div>
        <div class="card-body">
            @foreach (var tarea in Model.Tareas.OrderBy(t => t.Prioridad))
            {
                <div class="mb-2">
                    <strong>@tarea.Titulo</strong> -
                    <span class="badge bg-info">@tarea.Estado</span>
                    <span class="badge bg-warning">@tarea.Prioridad</span>
                </div>
            }
        </div>
    </div>
}