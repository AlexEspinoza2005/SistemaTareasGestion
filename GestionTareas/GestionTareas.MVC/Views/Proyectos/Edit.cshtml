@model GestionTareas.API.Models.Proyecto

@{
    ViewData["Title"] = "Editar Proyecto";
}

<h1 class="text-center" style="color: #2c3e50; font-size: 2.5rem; font-weight: bold; margin-bottom: 30px;">@ViewData["Title"]</h1>

<div class="container" style="max-width: 800px; margin: 0 auto; padding: 30px; background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger" style="font-size: 0.9rem; margin-bottom: 20px;"></div>

             <div class="form-group mb-4">
            <label for="Nombre" class="form-label" style="font-weight: bold; color: #34495e;">Nombre del Proyecto</label>
            <input asp-for="Nombre" class="form-control" style="padding: 12px; border-radius: 8px; border: 1px solid #ddd;" />
            <span asp-validation-for="Nombre" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <div class="form-group mb-4">
            <label for="Descripcion" class="form-label" style="font-weight: bold; color: #34495e;">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="5" style="padding: 12px; border-radius: 8px; border: 1px solid #ddd;"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar Cambios" class="btn btn-primary" style="background-color: #3498db; border: none; padding: 12px 20px; border-radius: 8px; font-size: 1.1rem; width: 100%;" />
        </div>

        <div class="text-center" style="margin-top: 10px;">
            <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: #95a5a6; border: none; font-size: 1.1rem; padding: 12px 20px; border-radius: 8px; width: 100%;">Cancelar</a>
        </div>
    </form>
</div>
