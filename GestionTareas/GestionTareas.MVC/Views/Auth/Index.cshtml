@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h1 class="text-center" style="color: #2c3e50; font-size: 2.5rem; font-weight: bold; margin-bottom: 30px;">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Login" method="post" style="background-color: #ffffff; padding: 30px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-4">
                <label for="email" class="form-label" style="font-size: 1.1rem; color: #34495e;">Email</label>
                <input name="email" type="email" class="form-control" required style="border-radius: 8px; padding: 10px; border: 1px solid #ddd; font-size: 1rem;" />
            </div>

            <div class="form-group mb-4">
                <label for="contrasenia" class="form-label" style="font-size: 1.1rem; color: #34495e;">Contraseña</label>
                <input name="contrasenia" type="password" class="form-control" required style="border-radius: 8px; padding: 10px; border: 1px solid #ddd; font-size: 1rem;" />
            </div>

            <div class="form-group mb-4">
                <input type="submit" value="Iniciar Sesión" class="btn btn-primary btn-block" style="background-color: #3498db; border: none; font-size: 1.1rem; padding: 12px; border-radius: 8px;" />
            </div>

            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a href="@Url.Action("Create", "Usuarios")" style="color: #3498db; font-size: 1.1rem; text-decoration: none;">¿No tienes cuenta? Regístrate aquí</a>
</div>
