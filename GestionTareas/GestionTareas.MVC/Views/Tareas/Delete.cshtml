@model GestionTareas.API.Models.Tarea

<h1>Eliminar Tarea</h1>

<h3>¿Estás seguro de que deseas eliminar esta tarea?</h3>

<div>
    <dl>
        <dt>ID:</dt>
        <dd>@Model.Id</dd>

        <dt>Título:</dt>
        <dd>@Model.Titulo</dd>

        <dt>Descripción:</dt>
        <dd>@Model.Descripcion</dd>

        <dt>Estado:</dt>
        <dd>@Model.Estado</dd>

        <dt>Prioridad:</dt>
        <dd>@Model.Prioridad</dd>

        <dt>Proyecto ID:</dt>
        <dd>@Model.ProyectoId</dd>

        <dt>Usuario ID:</dt>
        <dd>@Model.UsuarioId</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" />
    <a href="@Url.Action("Index")">Cancelar</a>
</form>