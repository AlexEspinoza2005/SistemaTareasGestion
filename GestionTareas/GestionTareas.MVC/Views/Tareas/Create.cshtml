@model GestionTareas.API.Models.Tarea

<h1>Crear Nueva Tarea</h1>
<br>

<form asp-action="Create">
    <div>
        <label asp-for="Titulo">Título</label>
        <input asp-for="Titulo" />
        <span asp-validation-for="Titulo"></span>
    </div>
    <br>

    <div>
        <label asp-for="Descripcion">Descripción</label>
        <textarea asp-for="Descripcion"></textarea>
        <span asp-validation-for="Descripcion"></span>
    </div>
    <br>


    <div>
        <label asp-for="Estado">Estado</label>
        <select asp-for="Estado">
            <option value="">Seleccionar Estado</option>
            <option value="Pendiente">Pendiente</option>
            <option value="En Progreso">En Progreso</option>
            <option value="Completada">Completada</option>
            <option value="Cancelada">Cancelada</option>
        </select>
        <span asp-validation-for="Estado"></span>
    </div>
    <br>

    <div>
        <label asp-for="Prioridad">Prioridad</label>
        <select asp-for="Prioridad">
            <option value="">Seleccionar Prioridad</option>
            <option value="Baja">Baja</option>
            <option value="Media">Media</option>
            <option value="Alta">Alta</option>
        </select>
        <span asp-validation-for="Prioridad"></span>
    </div>
    <br>


    <div>
        <label asp-for="ProyectoId">Proyecto ID</label>
        <input asp-for="ProyectoId" type="number" />
        <span asp-validation-for="ProyectoId"></span>
    </div>
    <br>


    <div>
        <label asp-for="UsuarioId">Usuario ID</label>
        <input asp-for="UsuarioId" type="number" />
        <span asp-validation-for="UsuarioId"></span>
    </div>
    <br>


    <div>
        <input type="submit" value="Crear" />
        <a href="@Url.Action("Index")">Cancelar</a>
    </div>
</form>