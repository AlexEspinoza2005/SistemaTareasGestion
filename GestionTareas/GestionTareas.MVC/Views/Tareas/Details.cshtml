@model GestionTareas.API.Models.Tarea

@{
    ViewData["Title"] = "Detalles de la Tarea";
}

<h1 class="text-center" style="color: #2c3e50; font-size: 2.5rem; font-weight: bold; margin-bottom: 30px;">@ViewData["Title"]</h1>

<div class="container" style="max-width: 800px; margin: 0 auto; padding: 20px; background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <dl style="font-size: 1.1rem;">
        <dt style="font-weight: bold; color: #34495e;">ID:</dt>
        <dd>@Model.Id</dd>

        <dt style="font-weight: bold; color: #34495e;">Título:</dt>
        <dd>@Model.Titulo</dd>

        <dt style="font-weight: bold; color: #34495e;">Descripción:</dt>
        <dd>@Model.Descripcion</dd>

        <dt style="font-weight: bold; color: #34495e;">Estado:</dt>
        <dd>@Model.Estado</dd>

        <dt style="font-weight: bold; color: #34495e;">Prioridad:</dt>
        <dd>@Model.Prioridad</dd>

        <dt style="font-weight: bold; color: #34495e;">Proyecto ID:</dt>
        <dd>@Model.ProyectoId</dd>

        <dt style="font-weight: bold; color: #34495e;">Usuario ID:</dt>
        <dd>@Model.UsuarioId</dd>
    </dl>

    <div class="text-center" style="margin-top: 20px;">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning" style="background-color: #f39c12; border: none; font-size: 1.1rem; padding: 12px 20px; border-radius: 8px;">Editar</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: #95a5a6; border: none; font-size: 1.1rem; padding: 12px 20px; border-radius: 8px; margin-left: 10px;">Volver a la Lista</a>
    </div>
</div>
